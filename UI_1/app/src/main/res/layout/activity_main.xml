<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/group2" />

    <TextView
        android:id="@+id/bonjor_"
        android:layout_width="107dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="139dp"
        android:layout_marginTop="42dp"
        android:fontFamily="@font/ibm_plex_medium"
        android:gravity="center_horizontal|top"
        android:lineHeight="41sp"
        android:text="@string/bonjor"
        android:textAppearance="@style/bonjor_"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/french_clas"
        android:layout_width="100dp"
        android:layout_height="18dp"
        android:fontFamily="@font/ibm_plex_medium"
        android:gravity="center_horizontal|top"
        android:lineHeight="18sp"
        android:text="@string/french_classes"
        android:textAppearance="@style/french_clas"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@+id/bonjor_"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bonjor_"
        app:layout_constraintTop_toBottomOf="@+id/bonjor_" />
</androidx.constraintlayout.widget.ConstraintLayout>